<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Linear Layout (Vertical) to contain all other Layouts and views -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- LinearLayout for meal selection and display to view a particular meal-->
        <!-- TextView for progress tracking label-->
        <TextView
            android:id="@+id/meal_add_meal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="View a particular meal"
            android:textColor="#2A2AA5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- LinearLayout for selecting and viewing a particular meal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp">

            <!-- CardView for selecting previous meal to view a particular meal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/view_meal_previous_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp">

                <!-- ImageView for uploading the image -->
                <ImageView
                    android:id="@+id/view_meal_previous_button_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#4e54ff"
                    android:rotation="180"
                    android:src="@drawable/next_icon" />

            </androidx.cardview.widget.CardView>

            <!-- TextView for displaying selected meal and number to view a particular meal-->
            <TextView
                android:id="@+id/view_meal_meal_number_field"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Meal: 0/0"
                android:textAlignment="center"
                android:textColor="#49569E"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- CardView for selecting next meal to view a particular meal -->
            <androidx.cardview.widget.CardView
                android:id="@+id/view_meal_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="30dp">

                <!-- ImageView for selecting to view a particular meal -->
                <ImageView
                    android:id="@+id/view_meal_next_button_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="#4e54ff"
                    android:src="@drawable/next_icon" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <!-- Card View for selecting date to view a particular meal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_meal_date_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <!-- Linear Layout for selecting date to view a particular meal -->
            <LinearLayout
                android:id="@+id/view_meal_date_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <!-- TextView for display date selection to view a particular meal-->
                <TextView
                    android:id="@+id/view_meal_date_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:text="DD/MM/YYYY"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/view_meal_set_date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#350069"
                    app:cardCornerRadius="10dp">

                    <!-- Button to pick date to view a particular meal -->
                    <TextView
                        android:id="@+id/view_meal_set_date_button_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Set"
                        android:textColor="#ffffff"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card View for meal name, image, and type to view a particular meal -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_meal_image_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <!-- LinearLayout for meal name, image, and type to view a particular meal -->
            <LinearLayout
                android:id="@+id/view_meal_image_data_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/view_meal_meal_image_field"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="#000000"
                    android:src="@drawable/logo_white_nobg_cropped"
                    app:cardCornerRadius="20dp" />

                <LinearLayout
                    android:id="@+id/view_meal_data_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/view_meal_name_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Meal Name"
                        android:textColor="#006666"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/view_meal_type_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Type"
                        android:textColor="#49569E"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for viewing meal nutrients -->
        <androidx.cardview.widget.CardView
            android:id="@+id/view_meal_nutrients_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <!-- LinearLayout for viewing meal nutrients -->
            <LinearLayout
                android:id="@+id/view_meal_nutrients_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LinearLayout for viewing meal energy and protein -->
                <LinearLayout
                    android:id="@+id/view_meal_energy_protein_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <!-- Label for track energy content -->
                    <TextView
                        android:id="@+id/view_meal_energy_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Energy"
                        android:textAlignment="center"
                        android:textColor="#49569E"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Meal energy content field -->
                    <EditText
                        android:id="@+id/view_meal_energy_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="650KCal"
                        android:inputType="number|numberDecimal"
                        android:textColor="#006666"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Label for meal protein content-->
                    <TextView
                        android:id="@+id/view_meal_protein_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Protein"
                        android:textAlignment="center"
                        android:textColor="#49569E"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!-- Meal protein content field -->
                    <EditText
                        android:id="@+id/view_meal_protein_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:hint="60g"
                        android:inputType="number|numberDecimal"
                        android:textColor="#006666"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- View for horizontal line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="#f3f3f3" />

                <!-- LinearLayout for viewing meal fats and carbohydrates -->
                <LinearLayout
                    android:id="@+id/view_meal_fats_carbohydrates_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <!-- Label for meal fats content -->
                    <TextView
                        android:id="@+id/view_meal_fats_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fats"
                        android:textAlignment="center"
                        android:textColor="#49569E"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Meal fats content field -->
                    <EditText
                        android:id="@+id/view_meal_fats_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="60g"
                        android:inputType="number|numberDecimal"
                        android:textColor="#006666"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Label for meal carbohydrates content -->
                    <TextView
                        android:id="@+id/view_meal_carbohydrates_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Carbs."
                        android:textAlignment="center"
                        android:textColor="#49569E"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <!-- Meal content carbohydrates field -->
                    <EditText
                        android:id="@+id/view_meal_carbohydrates_field"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:hint="60g"
                        android:inputType="number|numberDecimal"
                        android:textColor="#006666"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>