<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1">

    <!-- Card view for user to view medicine intake -->
    <androidx.cardview.widget.CardView
        android:id="@+id/view_medicine_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="30dp"
        app:cardCornerRadius="10dp">

        <!-- Linear Layout for user to view medicine intake -->
        <LinearLayout
            android:id="@+id/view_medicine_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <!-- Text View for user to view medicine name -->
            <TextView
                android:id="@+id/view_medicine_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please reset date"
                android:textAlignment="center"
                android:textColor="#49569E"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Text View for user to view medicine intake -->
            <TextView
                android:id="@+id/view_medicine_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="0 units"
                android:textAlignment="center"
                android:textColor="#006666"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>