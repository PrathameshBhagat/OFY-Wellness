                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:hint="Medicine 3"
                    android:textColor="#49569E"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- EditText to updating medicine_3 recommended intake -->
                <EditText
                    android:id="@+id/prescription_update_medicine_3_r_intake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:hint="5 Tablets"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for updating medicine_4 prescription -->
        <androidx.cardview.widget.CardView
            android:id="@+id/prescription_update_medicine_4_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <!-- LinearLayout for updating medicine_4 prescription -->
            <LinearLayout
                android:id="@+id/prescription_update_medicine_4_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <!-- Label for updating medicine_4 name -->
                <EditText
                    android:id="@+id/prescription_update_medicine_4_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:hint="Medicine 4"
                    android:textColor="#49569E"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- EditText to updating medicine_4 recommended intake -->
                <EditText
                    android:id="@+id/prescription_update_medicine_4_r_intake"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:hint="5 Tablets"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for updating medicine_5 prescription -->
        <androidx.cardview.widget.CardView
            android:id="@+id/prescription_update_medicine_5_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <!-- LinearLayout for updating medicine_5 prescription -->
            <LinearLayout
                android:id="@+id/prescription_update_medicine_5_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <!-- Label for updating medicine_5 name -->
                <EditText
                    android:id="@+id/prescription_update_medicine_5_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
