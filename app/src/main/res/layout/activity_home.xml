<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <!-- TODO:Add proper comments till tab layout-->

    <!--Top bar Starts -->
    <!-- LinearLayout for image and contents of top bar -->
    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_background"
        android:orientation="horizontal">

        <!-- LinearLayout for contents of top bar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- LinearLayout for logo, company and tag line of top bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- ImageView for logo of top bar -->
                <ImageView
                    android:id="@+id/top_logo"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/logo_white_nobg_cropped" />

                <!-- TextView for logo of top bar -->
                <TextView
                    android:id="@+id/top_company_name_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:text="OFY Clinics"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- TextView for tagline of top bar -->
            <TextView
                android:id="@+id/topic1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Meet a better you"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- ImageView for additional girl image of top bar -->
        <ImageView
            android:id="@+id/heading_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/headimage" />

    </LinearLayout>

    <!-- Layout to show the tab bar-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_container"
        android:backgroundTint="@color/white"
        app:tabIndicatorColor="#0000ff">

        <!-- Tab items -->
        <!-- Add meal Tab -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/food_icon" />

        <!-- View Meal Tab -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/view_icon" />

        <!-- Track diet Tab -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/track_icon" />

        <!-- Services Tab -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/services_icon" />

        <!-- Profile Tab -->
        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:icon="@drawable/profile_icon" />

    </com.google.android.material.tabs.TabLayout>

    <!-- Viewer to show the tab content  -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_layout" />

</RelativeLayout>