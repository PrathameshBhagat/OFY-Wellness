<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDietTargetActivity">

    <!-- Constrained layout for responsiveness -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- Label for updating  diet target -->
        <TextView
            android:id="@+id/target_update_target_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Update diet target : "
            android:textColor="#2A2AA5"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- CardView for updating energy target -->
        <androidx.cardview.widget.CardView
            android:id="@+id/target_energy_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_update_target_label">

            <!-- LinearLayout for updating energy target -->
            <LinearLayout
                android:id="@+id/target_energy_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for updating energy target -->
                <TextView
                    android:id="@+id/target_energy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Energy"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- EditText to update energy target -->
                <EditText
                    android:id="@+id/target_energy_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="650Cal"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for updating protein target -->
        <androidx.cardview.widget.CardView
            android:id="@+id/target_protein_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_energy_card">

            <!-- LinearLayout for updating protein target -->
            <LinearLayout
                android:id="@+id/target_protein_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for updating protein target -->
                <TextView
                    android:id="@+id/target_protein_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Protein"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- EditText to update protein target -->
                <EditText
                    android:id="@+id/target_protein_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for updating fats target -->
        <androidx.cardview.widget.CardView
            android:id="@+id/target_fats_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_protein_card">

            <!-- LinearLayout for updating fats target -->
            <LinearLayout
                android:id="@+id/target_fats_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for updating fats target -->
                <TextView
                    android:id="@+id/target_fats_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Fats      "
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- EditText to update fats target -->
                <EditText
                    android:id="@+id/target_fats_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for updating carbohydrates target -->
        <androidx.cardview.widget.CardView
            android:id="@+id/target_carbohydrates_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_fats_card">

            <!-- LinearLayout for updating carbohydrates target -->
            <LinearLayout
                android:id="@+id/target_carbohydrates_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Label for updating carbohydrates target -->
                <TextView
                    android:id="@+id/target_carbohydrates_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Carbohydrates"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- EditText to update carbohydrates target -->
                <EditText
                    android:id="@+id/target_carbohydrates_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Button to submit updated target -->
        <Button
            android:id="@+id/target_update_target_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginTop="24dp"
            android:text="Update target"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/target_carbohydrates_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>