<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddMealTab">

    <!-- Constrained Layout for responsiveness -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- CardView for meal name -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_name_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- LinearLayout for meal name -->
            <LinearLayout
                android:id="@+id/meal_name_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for meal name -->
                <TextView
                    android:id="@+id/meal_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Name"
                    android:textColor="#49569E"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <!-- Meal name field -->
                <EditText
                    android:id="@+id/meal_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="Rice bowl"
                    android:inputType="text"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for meal type -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_type_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_name_card">

            <!-- LinearLayout for meal type -->
            <LinearLayout
                android:id="@+id/meal_type_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for meal type content -->
                <TextView
                    android:id="@+id/meal_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Meal type"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Spinner for meal type  -->
                <Spinner
                    android:id="@+id/meal_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for meal energy -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_energy_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_type_card">

            <!-- LinearLayout for meal energy -->
            <LinearLayout
                android:id="@+id/meal_energy_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for meal energy content -->
                <TextView
                    android:id="@+id/meal_energy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Energy"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Meal energy content field -->
                <EditText
                    android:id="@+id/meal_energy_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="650Cal"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for meal protein -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_protein_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_energy_card">

            <!-- LinearLayout for meal protein -->
            <LinearLayout
                android:id="@+id/meal_protein_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for meal protein content-->
                <TextView
                    android:id="@+id/meal_protein_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Protein"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Meal protein content field -->
                <EditText
                    android:id="@+id/meal_protein_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for meal fats -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_fats_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_protein_card">

            <!-- LinearLayout for meal fats -->
            <LinearLayout
                android:id="@+id/meal_fats_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Label for meal fats content -->
                <TextView
                    android:id="@+id/meal_fats_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Fats      "
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Meal fats content field -->
                <EditText
                    android:id="@+id/meal_fats_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- CardView for meal carbohydrates -->
        <androidx.cardview.widget.CardView
            android:id="@+id/meal_carbohydrates_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_fats_card">

            <!-- LinearLayout for meal carbohydrates -->
            <LinearLayout
                android:id="@+id/meal_carbohydrates_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Label for meal carbohydrates content -->
                <TextView
                    android:id="@+id/meal_carbohydrates_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Carbohydrates"
                    android:textColor="#49569E"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Meal content carbohydrates field -->
                <EditText
                    android:id="@+id/meal_carbohydrates_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:hint="60g"
                    android:inputType="number|numberDecimal"
                    android:textColor="#006666"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ImageView for uploading the image -->
        <ImageView
            android:id="@+id/meal_add_image_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_margin="32dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_carbohydrates_card" />

        <!-- Button to select image -->
        <Button
            android:id="@+id/meal_select_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="Select Image"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_add_image_view" />

        <!-- Progress bar to show upload progress -->
        <ProgressBar
            android:id="@+id/meal_upload_meal_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_select_image_button" />

        <!-- Button to upload the meal -->
        <Button
            android:id="@+id/upload_meal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#1EB026"
            android:text="Save meal"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meal_upload_meal_progress_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>