<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Include number picker fragment for selecting weight -->
    <include
        layout="@layout/register_sub_fragment_number_pickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <!-- Button for moving to next page -->
    <Button
        android:id="@+id/register_next_weight_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:backgroundTint="#1B7C9A"
        android:text="Next"
        android:textSize="30sp" />

</RelativeLayout>